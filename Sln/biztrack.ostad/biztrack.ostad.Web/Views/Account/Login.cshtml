@model biztrack.ostad.Contract.Request.LoginModel
@{
    ViewData["Title"] = "Log in";
    var returnUrl = ViewData["ReturnUrl"] as string ?? "/";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <h2>@ViewData["Title"]</h2>
        <hr />
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        <form asp-action="Login" asp-route-returnUrl="@returnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" autocomplete="username" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Password" class="form-control" autocomplete="current-password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check mb-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary w-100">Log in</button>
        </form>
        <p class="mt-3">
            <a asp-action="Register" asp-route-returnUrl="@returnUrl">Register as a new user</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
