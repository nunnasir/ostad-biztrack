@model ProductDetailResponse
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>
<h3 class="text-danger">Are you sure you want to delete this product?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Code</dt>
    <dd class="col-sm-10">@(Model.Code ?? "-")</dd>
    <dt class="col-sm-2">Total stock</dt>
    <dd class="col-sm-10">@Model.TotalStock.ToString("N2")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
